.b-autorization
    padding-left 45px
    padding-right 45px
    @media only screen and (max-width: 900px)
        padding-left 0
        padding-right 0

    &__header
        margin-bottom 75px
        
        @media only screen and (max-width: 880px)
            margin-bottom 20px
    
    &__content
        display flex
        justify-content space-between
        
        @media only screen and (max-width: 880px)
            display block
        
    &__form
        flex 0 0 350px
        max-width 350px
        font-size 14px
        line-height 14px
        padding-top 4px
        @media only screen and (max-width: 880px)
            margin 0 auto
            flex none
            width 350px
            max-width 100%
            margin-bottom 30px
        
        input
            display block
            width 100%

        input ~ input
            margin-top 13px

    &__text
        flex 0 0 371px
        max-width 371px
        @media only screen and (max-width: 880px)
            margin 0 auto
            flex none
            width 350px
            max-width 100%
        @media only screen and (max-width: 590px)
            text-align center
            font-size 14px
        
        p 
            margin-bottom 33px
            @media only screen and (max-width: 880px)
                margin-bottom 15px
            
        
        p:first-child
            margin-top 0
        p:last-child
            margin-bottom 0
            

        [href*="tel"],
        [href*="mailto"]
            color #212529
            
            &:hover
                color #212529
                text-decoration none
                
        [href*="mailto"]
            &:hover
                text-decoration underline
                
    &__submit
        display flex
        justify-content space-between
        align-items flex-end
        @media only screen and (max-width: 590px)
            display block
        .b-button
            flex 0 0 173px
            max-width 173px
            @media only screen and (max-width: 590px)
                flex none
                max-width 100%
                width 240px
                display block
                margin 0 auto
    &__forgot-pass
        margin 11px 0 9px
        @media only screen and (max-width: 590px)
            margin 11px 0 20px
            text-align center
        a 
            text-decoration underline
            color #7c6656
            
            &:hover
                color #7c6656
                text-decoration none
    &__check
        display flex
        align-items center
        @media only screen and (max-width: 590px)
            margin-bottom 15px
            justify-content center
        
        label
            margin-bottom 0
                
