.b-catalogue-list
    margin-bottom 45px
    @media only screen and (max-width: 767px)
        margin-bottom 40px
    &__header
        text-align left
    &__items
        &--hidden 
            display none
            margin-top 20px
            &.active
                display block
    &__item {}
    &__item ~ &__item
        margin-top 21px
        
    &__more
        text-align center
        padding-top 20px
        margin-top 25px
        border-top 1px solid #e4e6ed
        font-size 18px
        line-height 18px
        font-weight: $fontWeight.ultra
        a 
            .fa 
                margin-left 7px
            &:before
                content attr(data-show)
            &.active
                &:before
                    content attr(data-hide)
                .fa 
                    position relative
                    top 3px
                    transform rotate(-180deg)
