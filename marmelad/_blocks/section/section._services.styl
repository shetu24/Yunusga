.b-section
    &--services
        border-bottom 1px dotted rgba(160,151,144,.6)
        
        .b-section__header 
            line-height 43px
            margin-bottom 43px
            
            @media only screen and (max-width: 767px)
                margin-bottom 30px
                line-height 35px

.b-services
    &__inner 
        padding 81px 0 85px
        margin 0 auto
        @media only screen and (max-width: 767px)
            padding 175px 0 25px
            position relative

    &__items
        position relative
        padding 0 0 0 210px
        background url(../img/services-bg.png) left top no-repeat
        font-weight: $fontWeight.ultra
        
        @media only screen and (max-width: 767px)
            padding 0
            position static
            background none
            &:before 
                content '' 
                position absolute
                left 50%
                top 40px
                margin-left -55px
                width 110px
                height 114px
                background url(../img/services-bg.png) left top no-repeat
                background-size 100% auto
                
                
        
    &__item ~ &__item 
        margin-top 17px

    &__header
        font-size 24px
        margin-bottom 8px
        @media only screen and (max-width: 767px)
            font-size 20px
        
    &__list
        font-size 18px
        
    &__list-item
        &:hover
            text-decoration none
            color #302721
