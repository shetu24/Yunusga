.b-section
    &--brands
        border-bottom 1px dotted rgba(160,151,144,.6)
.b-brands
    &__inner 
        text-align center
        padding 85px 0 88px
        margin 0 auto
        @media only screen and (max-width: 767px)
            padding 50px 0

    &__items
        padding-top 75px
        position relative
        @media only screen and (max-width: 767px)
            padding-top 50px
        
    &__row
        display flex
        flex-wrap wrap
        justify-content space-between
        
        border-bottom 1px solid #e4e6ed
        
        padding-bottom 42px
        
        @media only screen and (max-width: 767px)
            border-bottom none
            padding-bottom 0

    &__row ~ &__row
        margin-top 32px
        @media only screen and (max-width: 767px)
            margin-top 0
        
    &__item 
        text-align center
        display flex
        flex-direction column
        align-items center
        @media only screen and (max-width: 767px)
            flex 0 0 33.33%
            margin-bottom 30px
        @media only screen and (max-width: 530px)
            flex 0 0 50%
        
    &__image
        display block
        font-size 0
        line-height 0
        margin-bottom 22px
        flex 1
        display flex
        flex-direction column
        justify-content center
        align-items center
        img 
            height auto
            max-width 100%
            
    &__title
        font-size 18px
    
    &__more
        font-size 18px
        padding-top 36px
        @media only screen and (max-width: 767px)
            padding-top 20px
        a
            &:before
                content attr(data-show)
            .fa 
                transition transform 0.2s linear 0s
                margin-left 3px
                position relative
            
            &.active

                &:before
                    content attr(data-hide)
                .fa 
                    transform: scaleY(-1);
                    top 2px

    &__hidden 
        display none
        padding-top 32px