.b-filter
    .b-section--intro &
        background-color rgba(60, 36, 20, .52)
        padding 10px 18px
    &__row 
        display flex
        
        @media only screen and (max-width: 950px)
            flex-direction column
            
        &--checks
            @media only screen and (max-width: 767px)
                display none
        
    &__group
        display flex
        flex 1
        @media only screen and (max-width: 767px)
            flex-direction column
        &--type_text
            margin-left -6px
            
            .b-filter__item
                margin-left 6px
                
        &--type_checkbox
            margin-left -20px
            .b-filter__item
                margin-left 20px

    &__item
        @media only screen and (max-width: 767px)
            margin-bottom 10px

        &--control
            flex 1
            &:first-child
                flex 1 1
                //flex 1 0 242px
                //max-width 242px
                
                @media only screen and (max-width: 950px)
                    flex 1
                    max-width none

                
        &--control_text
            position relative
            .fa 
                position absolute
                right 12px
                top 50%
                margin-top -7px
                font-size 15px
                color #7f6f64
                pointer-events auto
        &--control_checkbox
            flex none !important
            display flex
            align-items center
            .jq-checkbox
                flex-shrink 0
        &--control_submit
            flex 0 0 188px
            max-width 188px
            margin-left 23px
            
            @media only screen and (max-width: 950px)
                flex none
                max-width none
                margin-left 0
                margin-top 10px
                text-align center
                
            @media only screen and (max-width: 767px)
                margin-top 0

            
            .b-button
                width 100%
                
                @media only screen and (max-width: 950px)
                    width 100%
                    
    &__label
        font-size 14px
        font-weight: $fontWeight.ultra
        margin 0
                
    &__input
        height 100%
        display block
        width 100%
        border 1px solid #675446
        box-shadow 1px 2px 2px rgba(0, 0, 0, 0.19)
        background-color #fff
        background-repeat no-repeat
        
        &[type="text"]
            padding 0 36px 0 14px
            font-size 14px
        
        &--autocomplete

            &_spec
                background-image url(../img/filter-icon1.png)
                background-position left bottom
                padding-right 14px !important
                
            &_brand
                background-image url(../img/filter-icon2.png)
                background-position left bottom
            &_metro
                background-image url(../img/filter-icon3.png)
                background-position left bottom
                         
        &--sitemap-page
            background none
            border 1px solid #e8e7e6
            box-shadow none

    &--catalogue
        flex none
        margin-top 22px
        margin-bottom 12px
        input[type="text"],
        .jq-checkbox,
        .jq-radio
            border-color #796d63

        @media only screen and (max-width: 767px)
            margin-top 0
        
        .b-button
            background-image: linear-gradient(to top, #514842 0%, #514842 100%);
            background-color: #514842;
            &:hover
                background-image: linear-gradient(to top, #c33a33 0%, #cd4740 100%);
                background-color: #cd4740;
            &:active
                background-image: linear-gradient(to top, #c33a33 0%, #cd4740 100%);
                background-color: #cd4740;
                box-shadow inset 0 4px 7px rgba(0,0,0,.2)
        .b-filter
            &__row
                padding-left 14px
                padding-right 14px
                @media only screen and (max-width: 767px)
                    padding-left 0
                    padding-right 0
            &__input
                box-shadow none
                background none
        .b-filter__row ~ .b-filter__row
            margin-top  29px
            @media only screen and (max-width: 767px)
                margin-top 10px
.b-filter
    &--sitemap-page
        max-width 844px
        padding 0 20px
        margin 25px auto 20px

        @media all and (max-width:767px)
            margin-top 195px
        
        .b-button
            background-image linear-gradient(to top, #5c524b 0%, #5c524b 100%)

.app
    &__content
        .b-crumbs
            display block
            
.b-sitemap
    &__site-map
        list-style none
        margin-top 27px
        padding 0 0 90px

        li
            a
                padding 7px 0
                display inline-block
            
            ul
                list-style none
                padding-left 15px                

