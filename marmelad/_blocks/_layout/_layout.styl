html,
body
    margin 0
    padding 0

html
    min-height 100%
    min-height 100vh

.app
    
    display flex
    flex-direction column
    height 100%
    height 100vh

    &__wrapper
        display flex
        flex-direction column
        height 100%
        height 100vh

    &__content
        display flex
        flex 1 0 auto

    &__main
        flex 1
        padding-bottom 90px
        
        @media only screen and (max-width: 767px)
            padding-bottom 40px
        
        .app--home &
            padding-bottom 0
        .app--about &
            padding-bottom 0
        .app--site-map &
            padding-bottom 0
        .app--faq &
            padding-bottom 0
        .app--wright &
            padding-bottom 0
        .app--lk-registration &
            padding-bottom 30px
        .app--catalogue-card_company &
            padding-bottom 0
        .app--catalogue-card_without-address &
            padding-bottom 0
            
    &__aside
        
        &--left
            order -1
            flex : 0 0 300px
            
        &--right
            flex : 0 0 300px