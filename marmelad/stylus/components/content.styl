// Кнопки
.b-button
    display inline-flex
    
    cursor pointer
    
    color #fef7ef
    text-decoration none

    padding 0 20px
   
    font-size 18px
    line-height 54px
    height 50px
    font-weight : $fontWeight.bold
    
    justify-content center
    align-items center
    text-align center
    text-transform uppercase
    text-decoration none
    letter-spacing 0.45px

    border none
    border-radius 3px
    background-image linear-gradient(to top, #c33a33 0%, #cd4740 100%)
    background-color #cd4740;
    
    &:hover,
    &:focus
        color #fff
        text-decoration none
        background-image: linear-gradient(to top, #c33a33 0%, #cd4740 100%);
        background-color: #cd4740;
        
    &:active
        box-shadow inset 3px 4px 5px rgba(157, 25, 25, 0.31)
        background-image linear-gradient(to top, #c33a33 0%, #cd4740 100%)

    // mods
    &--dark
        background-image linear-gradient(to top, #5c524b 0%, #5c524b 100%)
        background-color #cd4740
        &:hover,
        &:focus
            color #fff
            text-decoration none
            background-image linear-gradient(to top, #4a423d 0%, #5c524b 100%)

        &:active
            box-shadow inset 3px 4px 5px rgba(0, 0, 0, .2)
            background-image linear-gradient(to top, #5c524b 0%, #5c524b 100%)
            

